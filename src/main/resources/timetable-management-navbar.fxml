<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.*?>
<?import org.controlsfx.control.textfield.*?>

<BorderPane minWidth="-Infinity" prefHeight="50.0" prefWidth="1000.0" style="-fx-background-color: #F4F4F4; -fx-border-color: #C8C8C8; -fx-border-width: 0 0 1 0;" xmlns:controlsfx="http://controlsfx.org/control" BorderPane.alignment="CENTER" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
      <center>
         <SegmentedButton BorderPane.alignment="CENTER">
               <toggleGroup>
                  <ToggleGroup fx:id="calendarViewGroup" />
               </toggleGroup>
               <buttons>
                  <ToggleButton fx:id="calViewDay" text="Day" toggleGroup="$calendarViewGroup" />
                  <ToggleButton fx:id="calViewWeek" selected="true" text="Week" toggleGroup="$calendarViewGroup" />
                  <ToggleButton fx:id="calViewMonth" text="Month" toggleGroup="$calendarViewGroup" />
                  <ToggleButton fx:id="calViewYear" text="Year" toggleGroup="$calendarViewGroup" />
               </buttons>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </SegmentedButton>
      </center>
      <right>
         <HBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
            <CustomTextField fx:id="fieldSearch" prefHeight="26.0" prefWidth="195.0" promptText="Search events, people" styleClass="searchField">
               <left>
                  <Label styleClass="searchBoxLabel">
                     <graphic>
                        <ImageView fitHeight="15.0" fitWidth="22.0" mouseTransparent="true" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@/images/search_icon.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Label>
               </left>
            </CustomTextField>
            <Button alignment="CENTER" minHeight="30.0" minWidth="30.0" mnemonicParsing="false" mouseTransparent="false" prefHeight="30.0" prefWidth="30.0" style="-fx-background-radius: 5;">
               <graphic>
                  <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@/images/alerts_icon.png" />
                     </image>
                  </ImageView>
               </graphic>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button layoutX="10.0" layoutY="10.0" minHeight="30.0" minWidth="30.0" mnemonicParsing="false" mouseTransparent="false" prefHeight="30.0" prefWidth="30.0" style="-fx-background-radius: 5;">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@/images/message_icon.png" />
                     </image>
                  </ImageView>
               </graphic>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button layoutX="58.0" layoutY="10.0" mnemonicParsing="false" mouseTransparent="false" style="-fx-background-color: none;">
               <graphic>
                  <ImageView fitHeight="33.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@/images/profile_picture_icon.png" />
                     </image>
                  </ImageView>
               </graphic>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </HBox>
      </right>
   <padding>
      <Insets left="25.0" right="25.0" />
   </padding>
   <left>
      <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="332.0" BorderPane.alignment="CENTER">
         <children>
               <ImageView fitHeight="17.0" fitWidth="119.0" pickOnBounds="true" preserveRatio="true" HBox.hgrow="ALWAYS">
                  <image>
                     <Image url="@/images/easytable_logo.png" />
                  </image>
               </ImageView>
         </children>
      </HBox>
   </left>
</BorderPane>
